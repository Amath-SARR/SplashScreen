<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <data>

        </data>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".EspaceAdmin">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_marginBottom="79dp"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Bonjour"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/exit"
                    android:layout_width="60dp"
                    android:layout_marginTop="30dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_exit"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:textStyle="italic"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="TextView" />

                <ImageView
                    android:id="@+id/bank1"
                    android:layout_width="141dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="250dp"
                    android:src="@drawable/bank1" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="218dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView2"
                    android:layout_width="149dp"
                    android:layout_height="187dp"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="10dp"
                    app:layout_constraintBottom_toTopOf="@+id/cardView4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.803"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="221dp">

                    <ImageView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_add" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Faire un dÃ©pot"
                        android:textColor="@color/blue1"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView1"
                    android:layout_width="149dp"
                    android:layout_height="187dp"
                    android:layout_margin="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="120dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="10dp"
                    app:layout_constraintBottom_toTopOf="@+id/navBar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.338"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:layout_width="151dp"
                        android:layout_height="124dp"
                        android:layout_gravity="center"
                        android:src="@drawable/retrait" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/faire_un_retrait"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="255dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView4"
                    android:layout_width="149dp"
                    android:layout_height="178dp"
                    android:layout_margin="16dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="18dp"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="221dp"
                    tools:layout_editor_absoluteY="419dp">

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="101dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/ic_sac" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Voir la liste des clients"
                        android:textColor="@color/blue"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView3"
                    android:layout_width="149dp"
                    android:layout_height="179dp"
                    android:layout_margin="16dp"
                    android:layout_marginBottom="84dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="10dp"
                    app:layout_constraintBottom_toTopOf="@+id/navBar"
                    app:layout_constraintTop_toBottomOf="@+id/cardView1"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="23dp">

                    <ImageView
                        android:layout_width="108dp"
                        android:layout_height="103dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/ic_add1" />

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="S'inscrire un nouveau client"
                        android:textColor="@color/teal_200"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/navBar"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:background="@color/white"
                app:itemIconTint="@drawable/navbar_icon_color"
                app:itemTextColor="@drawable/navbar_icon_color"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:menu="@menu/bottom_navigation" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>